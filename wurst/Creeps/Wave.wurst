enum creeptype
	MELEE
	MAGE
	RANGED

public class NormalWave
	int meleeId
	int mageId
	int rangedId

	int amount
	int bounty

	creeptype typ = creeptype.MELEE

	construct(int meleeId,int mageId,int rangedId, int amount, int bounty)
		this.meleeId = meleeId
		this.mageId = mageId
		this.rangedId = rangedId
		this.amount = amount
		this.bounty = bounty

	function spawn()
		let t = getTimer()
		t.setData(this castTo int)
		t.start(0.1, function NormalWave.spawnCallback)

	static function spawnCallback()
		let t = GetExpiredTimer()
		var wave = t.getData() castTo NormalWave
		int id
		var destroyWave = false

		switch wave.typ
			case creeptype.MELEE
				id = wave.meleeId
				wave.typ = creeptype.MAGE
				t.start(0.8, function NormalWave.spawnCallback)
			case creeptype.MAGE
				id = wave.mageId
				wave.typ = creeptype.RANGED
				t.start(0.8, function NormalWave.spawnCallback)
			case creeptype.RANGED
				id = wave.rangedId
				destroyWave = true
				t.release()

		for i = 0 to wave.amount - 1
			doAfter(i.toReal()) ->
				for j = 0 to startPosCount
					let spoint = spawnRects[j].randomPoint().toVec3()
					new Creep(spoint, id, wave.bounty, middle, spoint.angleTo2d(middle))

		if destroyWave
			destroy wave


public abstract class CreateBoss
	abstract function create(vec3 startPos, int unitId, int bounty, vec2 middle)

public class BossWave
	int bossId
	int amount
	int bounty
	SoundDefinition s
	string info
	CreateBoss boss

	construct(int bossId, int amount, int bounty, string s, CreateBoss boss)
		this.bossId = bossId
		this.amount = amount
		this.bounty = bounty
		this.s = new SoundDefinition(s, false)
		this.boss = boss

	function spawn()
		s.play()
		print("|cffE62121## Attention:|r Boss incoming!")
		for i = 0 to amount-1
			for j = 0 to startPosCount
				boss.create(spawnRects[j].randomPoint().toVec3(), bossId, bounty, middle)
		destroy boss


